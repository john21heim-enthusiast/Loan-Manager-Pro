<body>

<div class="nav-bar">
    <div class="nav-item active" id="tab1" onclick="showView('lendingView')">1. Lending</div>
    <div class="nav-item" id="tab2" onclick="showView('calcView')">2. Calculation</div>
    <div class="nav-item" id="tab3" onclick="showView('receiptView')">3. Receipt</div>
</div>

<div id="lendingView" class="view active">
    <div class="dashboard">
        <div class="dash-row" style="border-bottom: 1px solid #48484a; padding-bottom: 10px; margin-bottom: 15px;">
            <div>
                <div class="dash-label">Total Outstanding</div>
                <div class="dash-val" id="dashGrandTotal" style="font-size: 1.8rem; color: var(--success);">0 Ks</div>
            </div>
        </div>
        <div class="dash-row">
            <div><div class="dash-label">Principal</div><div class="dash-val" id="dashP">0 Ks</div></div>
            <div style="text-align: right;"><div class="dash-label">Interest</div><div class="dash-val" id="dashI">0 Ks</div></div>
        </div>
    </div>

    <div class="card">
        <div class="input-group"><label>Borrower</label><input type="text" id="personName" placeholder="Full Name"></div>
        <div class="input-group"><label>Lending Date</label><input type="date" id="startDate"></div>
        <div class="input-group"><label>Principal (Ks)</label><input type="number" id="amount" placeholder="0"></div>
        <div class="input-group"><label>Monthly Rate (%)</label><input type="number" id="interest" placeholder="1.5"></div>
        <button class="btn btn-primary" onclick="showView('calcView')">Go to Calculation</button>
        <button class="btn btn-success" onclick="prepReceipt('lending')">Generate Lending Receipt</button>
    </div>

    <input type="text" id="searchBar" placeholder="Search history..." oninput="renderHistory()" style="width:100%; padding:12px; border-radius:12px; border:1px solid #d1d1d6; margin-bottom:15px; box-sizing: border-box;">
    <div id="historyList"></div>
</div>

<div id="calcView" class="view">
    <div class="card">
        <div class="input-group"><label>Repayment Date</label><input type="date" id="endDate" oninput="runLogic()"></div>
        <div class="info-table">
            <div class="info-row"><span>Borrower:</span> <span id="calcName">--</span></div>
            <div class="info-row"><span>Duration:</span> <span id="calcDuration" style="color:var(--primary)">--</span></div>
            <div class="info-row"><span>Principal:</span> <span id="calcP">--</span></div>
            <div class="info-row"><span>Interest:</span> <span id="calcI">--</span></div>
            <div class="info-row" style="border-top: 1px solid #eee; padding-top:10px; margin-top:10px; font-size: 1.4rem; color: var(--primary);">
                <span>Total Due:</span> <span id="calcTotal">0 Ks</span>
            </div>
        </div>
        <button class="btn btn-success" onclick="saveData()">Save to History</button>
        <button class="btn btn-primary" onclick="prepReceipt('final')">View Final Voucher</button>
    </div>
</div>

<div id="receiptView" class="view">
    <div id="receiptCapture">
        <div class="v-header">
            <h1 style="margin:0; letter-spacing: 2px;">LOAN VOUCHER</h1>
            <div id="rTimestamp" style="font-size: 0.8rem; margin-top:5px; color:#666;"></div>
        </div>
        <div id="receiptBody"></div>
        <div class="v-footer">
            <p>Generated by Loan Manager Pro</p>
        </div>
    </div>
    
    <button class="btn btn-success" onclick="shareAsImage()">Share as Image</button>
    <button class="btn btn-primary" onclick="shareNativeText()">Share as Text</button>
    <button class="btn btn-danger" onclick="resetAll()">New Entry</button>
</div>

<script>
    let currentRecord = {};
    let editIndex = -1;

    function showView(viewId) {
        document.querySelectorAll('.view').forEach(v => v.classList.remove('active'));
        document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('active'));
        document.getElementById(viewId).classList.add('active');
        if(viewId === 'lendingView') document.getElementById('tab1').classList.add('active');
        if(viewId === 'calcView') { document.getElementById('tab2').classList.add('active'); runLogic(); }
        if(viewId === 'receiptView') document.getElementById('tab3').classList.add('active');
    }

    function runLogic() {
        const name = document.getElementById('personName').value;
        const p = parseFloat(document.getElementById('amount').value);
        const mPercent = parseFloat(document.getElementById('interest').value);
        const start = new Date(document.getElementById('startDate').value);
        const end = new Date(document.getElementById('endDate').value);

        if (p && mPercent && start && end && end >= start) {
            let minMonthEnd = new Date(start);
            minMonthEnd.setMonth(minMonthEnd.getMonth() + 1);
            let totalInt = 0, durationText = "";

            if (end <= minMonthEnd) {
                totalInt = p * (mPercent / 100);
                durationText = "1 Month (Min)";
            } else {
                let tempDate = new Date(start), months = 0;
                while (true) {
                    let nextMonth = new Date(tempDate); nextMonth.setMonth(nextMonth.getMonth() + 1);
                    if (nextMonth > end) break;
                    tempDate = nextMonth; months++;
                }
                const extraDays = Math.ceil(Math.abs(end - tempDate) / (1000 * 60 * 60 * 24));
                const monthDays = new Date(tempDate.getFullYear(), tempDate.getMonth() + 1, 0).getDate();
                const monthlyCharge = p * (mPercent / 100);
                totalInt = (monthlyCharge * months) + (monthlyCharge / monthDays * extraDays);
                durationText = `${months}M & ${extraDays}D`;
            }

            let total = p + totalInt;
            document.getElementById('calcName').innerText = name;
            document.getElementById('calcP').innerText = p.toLocaleString() + " Ks";
            document.getElementById('calcDuration').innerText = durationText;
            document.getElementById('calcI').innerText = Math.round(totalInt).toLocaleString() + " Ks";
            document.getElementById('calcTotal').innerText = Math.round(total).toLocaleString() + " Ks";
            currentRecord = { name, p, mRate: mPercent, start: document.getElementById('startDate').value, end: document.getElementById('endDate').value, durationText, totalInt, total, settled: false };
        }
    }

    function prepReceipt(type) {
        const body = document.getElementById('receiptBody');
        document.getElementById('rTimestamp').innerText = new Date().toLocaleString();
        const name = document.getElementById('personName').value.toUpperCase();
        const p = parseFloat(document.getElementById('amount').value).toLocaleString();
        
        let html = `
            <div class="v-row"><span class="v-label">Borrower</span><span class="v-val">${name}</span></div>
            <div class="v-row"><span class="v-label">Principal</span><span class="v-val">${p} Ks</span></div>
            <div class="v-row"><span class="v-label">Monthly Rate</span><span class="v-val">${document.getElementById('interest').value}%</span></div>
            <div class="v-row"><span class="v-label">Start Date</span><span class="v-val">${document.getElementById('startDate').value}</span></div>
        `;

        if (type === 'final') {
            runLogic();
            html += `
                <div class="v-row"><span class="v-label">Repay Date</span><span class="v-val">${currentRecord.end}</span></div>
                <div class="v-row"><span class="v-label">Total Duration</span><span class="v-val">${currentRecord.durationText}</span></div>
                <div class="v-row"><span class="v-label">Accrued Interest</span><span class="v-val">${Math.round(currentRecord.totalInt).toLocaleString()} Ks</span></div>
                <div class="v-total-box">
                    <div style="font-size:0.8rem; opacity:0.8; margin-bottom:5px;">TOTAL AMOUNT DUE</div>
                    <div style="font-size:1.8rem; font-weight:900;">${Math.round(currentRecord.total).toLocaleString()} Ks</div>
                </div>
            `;
        } else {
            html += `<div class="v-total-box">STATUS: LENDING RECORD</div>`;
        }
        body.innerHTML = html;
        showView('receiptView');
    }

    async function shareAsImage() {
        const captureArea = document.getElementById('receiptCapture');
        const canvas = await html2canvas(captureArea, { scale: 2 }); // Higher scale for clarity
        canvas.toBlob(async (blob) => {
            const file = new File([blob], "loan_voucher.png", { type: "image/png" });
            if (navigator.share && navigator.canShare({ files: [file] })) {
                await navigator.share({ files: [file], title: 'Loan Voucher' });
            } else {
                alert("Please use Safari or a modern browser on iPad to share images.");
            }
        });
    }

    function shareNativeText() {
        const text = document.getElementById('receiptCapture').innerText;
        navigator.share({ title: 'Voucher Text', text: text });
    }

    function saveData() {
        runLogic();
        if(!currentRecord.name) return;
        let history = JSON.parse(localStorage.getItem('loanHistory')) || [];
        if (editIndex > -1) { history[editIndex] = {...currentRecord, settled: history[editIndex].settled}; editIndex = -1; }
        else { history.unshift(currentRecord); }
        localStorage.setItem('loanHistory', JSON.stringify(history));
        renderHistory(); showView('lendingView');
    }

    function renderHistory() {
        const list = document.getElementById('historyList');
        const history = JSON.parse(localStorage.getItem('loanHistory')) || [];
        const search = document.getElementById('searchBar').value.toLowerCase();
        let aP = 0, aI = 0, aT = 0;
        
        list.innerHTML = '';
        history.filter(i => i.name.toLowerCase().includes(search)).forEach((item, index) => {
            if(!item.settled) { aP += item.p; aI += item.totalInt; aT += item.total; }
            list.innerHTML += `
                <div class="history-card ${item.settled ? 'settled' : ''}">
                    <div style="display:flex; justify-content:space-between; font-weight:bold;">
                        <span>${item.name} ${item.settled ? '<span class="badge-settled">SETTLED</span>' : ''}</span>
                        <span>${Math.round(item.total).toLocaleString()} Ks</span>
                    </div>
                    <div style="margin-top:12px; display:flex; gap:15px; font-size:0.8rem;">
                        <button onclick="toggleSettled(${index})" style="border:none; background:none; color:var(--success); font-weight:bold; cursor:pointer;">${item.settled ? 'UNSETTLE' : 'SETTLE'}</button>
                        <button onclick="editItem(${index})" style="border:none; background:none; color:var(--primary); font-weight:bold; cursor:pointer;">EDIT</button>
                        <button onclick="deleteItem(${index})" style="border:none; background:none; color:var(--danger); font-weight:bold; cursor:pointer;">DEL</button>
                    </div>
                </div>`;
        });
        document.getElementById('dashGrandTotal').innerText = Math.round(aT).toLocaleString() + " Ks";
        document.getElementById('dashP').innerText = Math.round(aP).toLocaleString() + " Ks";
        document.getElementById('dashI').innerText = Math.round(aI).toLocaleString() + " Ks";
    }

    function toggleSettled(index) {
        let history = JSON.parse(localStorage.getItem('loanHistory'));
        history[index].settled = !history[index].settled;
        localStorage.setItem('loanHistory', JSON.stringify(history));
        renderHistory();
    }

    function deleteItem(index) {
        if(confirm("Delete?")) {
            let history = JSON.parse(localStorage.getItem('loanHistory'));
            history.splice(index, 1);
            localStorage.setItem('loanHistory', JSON.stringify(history));
            renderHistory();
        }
    }

    function editItem(index) {
        const item = JSON.parse(localStorage.getItem('loanHistory'))[index];
        editIndex = index;
        document.getElementById('personName').value = item.name;
        document.getElementById('startDate').value = item.start;
        document.getElementById('amount').value = item.p;
        document.getElementById('interest').value = item.mRate;
        showView('lendingView');
    }

    function resetAll() {
        document.querySelectorAll('input').forEach(i => i.value = '');
        editIndex = -1;
        showView('lendingView');
    }
    renderHistory();
</script>
</body>
</html>
